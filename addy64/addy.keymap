#include "./miryoku/miryoku/miryoku.dtsi"

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

&lt {
    tapping-term-ms = <200>;
};


/ {

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            label = "default";
// ------------------------------------------------------------------------------------------------------------
// |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
// |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
// |  TAB  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
//               | GUI | ALT  | CTRL | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | ALT   | GUI  |
            bindings = <
           &kp GRAVE  &kp N1     &kp N2     &kp N3     &kp N4     &kp N5                           &kp N6     &kp N7     &kp N8     &kp N9     &kp N0     &kp AMPERSAND
           &kp ESC    &kp Q      &kp W      &kp E      &kp R      &kp T      &kp N1     &kp N2     &kp Y      &kp U      &kp I      &kp O      &kp P      &kp BSPC
           &kp TAB    &kp A      &kp S      &kp D      &kp F      &kp G      &kp N4     &kp N3     &kp H      &kp J      &kp K      &kp L      &kp SEMI   &kp SQT
           &kp LSHFT  &kp Z      &kp X      &kp C      &kp V      &kp B      &kp C_MUTE &kp N5     &kp N      &kp M      &kp COMMA  &kp DOT    &kp FSLH   &kp RSHFT
                                 &kp LGUI   &kp LALT   &kp LCTRL  &mo LOWER  &kp RET    &kp SPACE  &mo RAISE  &kp RCTRL  &kp RALT   &kp RGUI
            >;
        };
    };
};
